<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/not_selected</item>
    </style>

    <style name="AppSelectableItem">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MyToolBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">#2A9D8F</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="SearchStyled" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:showAsAction">always</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="MySmallToolBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="textSize">20sp</item>
        <item name="titleTextColor">#CCCCCC</item>

        <item name="backgroundColor">#1C1C1C</item>
        <item name="android:textColorPrimary">#CCCCCC</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>